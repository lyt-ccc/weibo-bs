.cuIcon-back {
  font-size: 40rpx;
  font-weight: bold;
}
.picker{
  display: flex;
  width: 100%;
  font-size: 1rem;
  text-align: left;
  justify-content: flex-start;
  color: #999;
  height: 2rem;
  align-items: center;
  
  }
  .cu-form-group .title {
    min-width: calc(4em + 30rpx);
  }
  .solids{
   margin-top: 15rpx;
  }
  .dtp{
    background-color: white;
    padding:0;
  }
.action{
  font-size:30rpx;
}
.btn{
  margin-top:100rpx;
  color:#1a1515;
  letter-spacing: 5rpx;
}

.cu-form-group picker::after {
  font-family: "cuIcon";
  display: block;
  content: "\e6a3";
  position: absolute;
  font-size: 34rpx;
  color: var(--grey);
  line-height: 100rpx;
  width: 60rpx;
  text-align: center;
  top: -25rpx;
  bottom:0;
  right: -20rpx;
  margin: auto;
}
.bg-color{
  background-color: #fdd90f;
  letter-spacing:5px;
 }
 .bar-color{
  background-image: linear-gradient(to right,#00c7fe, #00a7ff);
}
