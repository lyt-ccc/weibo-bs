.swiper-tab {
  height: 10vh;
  display: flex;
  line-height: 7vh;
  margin-bottom: 10px;

}

.swiper-tab-list {

  font-size: 15px;
  float: left;
  width: 20%;
  color: #3f3c3c;
  text-align: center;
  /* margin-bottom: 10px; */
  /* padding-bottom: 10px; */
  font-weight: 600;
  letter-spacing: 5rpx;

}

.on {
  /* font-size: 30rpx; */
  color: rgb(248, 244, 244);
}

.swiper-box {
  display: block;
  height: 80vh;
  width: 100%;
  overflow: scroll;
}

.swiper-box view {
  text-align: center;
}

.text-sm1 {
  font-size: 30rpx;
}

.text-right {
  float: right;
}

.swiper-box view {
  text-align: left;
}

.text-content {
  font-size: 40rpx;
}

.content_tp {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.content-item {
  width: 44%;
  height: 280rpx;
  background-color: red;
  margin: 5px;
  /* 绝对定位的父级必须要定位 */
  position: relative;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.cu-load {
  display: block;
  line-height: 3em;
  text-align: center;
  height: 50%;
}

.lv {
  text-align: center;
}

.bar-color {
  background-image: linear-gradient(to right, #00c7fe, #00a7ff);
}

.up-id {
  letter-spacing: 3rpx;
  color: #fc8621;
}

.cuIcon-add {
  font-size: 38rpx;
  font-weight: bolder;
  color: #fc8621;
}
.cu-btn{
  color: #fc8621;
  width: 30rpx;
  border-radius:20rpx;
  border:1rpx solid #fc8621;
  font-size:27rpx;
}